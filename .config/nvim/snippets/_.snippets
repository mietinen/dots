snippet vim:full
	`substitute(substitute(&cms, '\s*%s\s*', ' '.printf('vim: set sw=%d ts=%d sts=%d %set tw=%d ft=%s :', &sw, &ts, &sts, &et ? '' : 'no', &tw, &ft).' ', ''), '\s*$', '', '')`
snippet vim:style
	`substitute(substitute(&cms, '\s*%s\s*', ' '.printf('vim: set sw=%d ts=%d sts=%d %set tw=%d :', &sw, &ts, &sts, &et ? '' : 'no', &tw).' ', ''), '\s*$', '', '')`
snippet vim:ft
	`substitute(substitute(&cms, '\s*%s\s*', ' '.printf('vim: set ft=%s :', &ft).' ', ''), '\s*$', '', '')`
