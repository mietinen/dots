#!/usr/bin/env bash

file="${XDG_DATA_HOME:-$HOME/.local/share}/emoji.txt"
url="https://unicode.org/Public/emoji/15.1/emoji-test.txt"

# Download and parse emoji-test.txt from unicode.org if it doesn't exist
dl="yes"
while [ ! -s "$file" ]; do
    if [ "$dl" = "yes" ]; then
        curl -sSf "$url" 2>/dev/null | \
            sed '{
                /^\(#\|\s*$\)/d
                s/.*#\s*\([^[:space:]]\+\)\s\+[^[:space:]]\+\s\+\(.*\)/\1\t\2/
            }' > "$file"
        unset dl
    else
        notify-send "Rofiunicode" "Error downloading emoji file from unicode.org"
        exit 1
    fi
done

if [ "$#" -lt 1 ]; then
    echo -en "\x00prompt\x1fSelect emoji\n"
    cat "$file"
else
    chosen="${1%%[[:space:]]*}"
    [ -z "$chosen" ] && exit 0
    coproc {
        printf "%s" "$chosen" | xclip -selection clipboard
        notify-send "Rofiunicode" "'$chosen' copied to clipboard."
    } >/dev/null 2>&1
fi
