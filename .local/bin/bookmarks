#!/usr/bin/env bash

# Source bookmarks
. "${XDG_CONFIG_HOME:-$HOME/.config}/shell/bookmarks" 2>/dev/null

# Fuzzy finder
if test -t 0
then fuzzy="fzf --query=\"$2\""
else fuzzy="cat"
fi

shopt -s globstar
case "$1" in
    file)
        # Config files, include hidden files
        shopt -s dotglob
        for b in ${bm_files[@]}; do
            [ -f "$b" ] && echo "$b"
        done | eval "$fuzzy" ;;
    dir)
        # Directories, exclude hidden directories
        for b in ${bm_dirs[@]}; do
            [ -d "$b" ] && echo "$b"
        done | eval "$fuzzy" ;;
    *) exit 1 ;;
esac
